.sheet {
  position: absolute;
  width: 100%;
  bottom: 0;
  z-index: 3;
}

/* 隐藏滚动条 */
-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.place-bg{
  flex: 1;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #18193D;
  opacity: 0.4;
  z-index: 2;
}

.content {
  position: relative;
  z-index: 5;
}

.title {
  position: absolute;
  top: 98px;
  left: 32px;
  font-size: 28px;
  font-family: 'AlibabaPuHuiTi';
  font-weight: bold;
  color: #fff;
}

.subtitle {
  position: absolute;
  top: 145px;
  left: 32px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.drawer-content {
  background-color: rgba(49, 59, 131, 0.24);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
}

.tabbar {
  position: fixed;
  bottom: 16px;
  left: 50%;
  transform: translateX(-50%);
  width: 343px;
  height: 52px;
  background: #11153C;
  border-radius: 40px;
  z-index: 6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-item.left {
  margin-left: 50px;
}

.tab-item.right {
  margin-right: 50px;
}

.tab-item .icon {
  width: 22px;
  height: 22px;
  margin-bottom: 3px;
}

.tab-item .text {
  font-size: 11px;
  color: #fff;
}

.tab-item.center {
  position: relative;
}

 .press-icon {
  width: 64px;
  height: 64px;
  position: absolute;
  bottom: 7px;
  left: 50%;
  transform: translateX(-50%);
}

.list-content{

}

.main-tab-container {
  margin-bottom: 16px;
}

/* 列表样式 */
.content-list {
  margin-top: 16px;
  padding: 0 16px;
}

.list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-image {
  width: 100%;
  height: 120px;
  border-radius: 12px;
}

.item-text {
  margin-top: 12px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 占位元素样式 */
.list-item.placeholder {
  height: 0;
  margin-bottom: 0;
  visibility: hidden;
}

/* 处理每行最后一个元素的右边距 */
.list-item:nth-child(3n) {
  margin-right: 0;
}

/* 上部蒙层 */
.top-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 4;
  pointer-events: none;
}

/* 下部蒙层 */
.bottom-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 4;
  pointer-events: none;
}

/* 调整其他元素的z-index */
.mask {
  z-index: 2;
}

.content {
  z-index: 5;
}

.tabbar {
  z-index: 6;
}

.bottom-overlay-inner {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  pointer-events: none;
}

.tab-item.active .text {
  color: #fff;
  font-weight: 500;
}

.grid-container {
  margin-top: 16px;
  padding: 0 16px;
}

.grid-list {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  width: calc((100% - 26px) / 3);
  margin-right: 13px;
  margin-bottom: 20px;
}

.grid-item:nth-child(3n) {
  margin-right: 0;
}

/* 自定义 van-grid 样式 */
.custom-grid {
  display: flex !important;
  flex-wrap: wrap !important;
  padding: 0 16px !important;
}

.grid-item {
  width: calc((100% - 26px) / 3) !important;
  margin-right: 13px !important;
  margin-bottom: 20px !important;
  padding: 0 !important;
  flex: none !important;
}

.grid-item:nth-child(3n) {
  margin-right: 0 !important;
}
