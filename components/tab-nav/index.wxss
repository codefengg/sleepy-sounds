.tab-list {
  position: relative;
  display: flex;
  align-items: center;
}

.tab-item {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-right: 48rpx;
  padding: 24rpx 0 36rpx 0;
  transition: all 0.3s ease-out;
  display: flex;
  align-items: flex-end; /* 底部对齐 */
  position: relative;
  overflow: hidden;
}

.tab-item.active {
  color: #ffffff;
  font-weight: 500;
  transform: scale(1.05);
}

.tab-line {
  position: absolute;
  bottom: 10px;
  width: 60rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 6rpx;
  transition: left 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 0 4rpx rgba(255, 255, 255, 0.5);
}

.tab-icon {
  width: 40rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.tab-text {
  line-height: 44rpx; /* 与图标高度一致，确保底部对齐 */
}

/* 副tab样式 */
.sub-tab-list {
  display: flex;
  flex-wrap: wrap;
}

.sub-tab-item {
  width: 140rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
  border-radius: 66rpx;
}

.sub-tab-item.active {
  color: #ffffff;
  background-color: rgba(217, 217, 217, 0.15);
}

/* 列表样式 */
.content-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 2rpx;  /* 防止阴影被切断 */
}

.list-item {
  width: 212rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-image {
  width: 212rpx;
  height: 240rpx;
  border-radius: 24rpx;
}

.item-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 处理每行最后一个元素的右边距 */
.list-item:nth-child(3n) {
  margin-right: 0;
}

/* 处理不满一行时的对齐方式 */
.list-item:nth-child(3n-2) {
  margin-right: 26rpx;
}

.list-item:nth-child(3n-1) {
  margin-right: 26rpx;
} 