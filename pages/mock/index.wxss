.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #18193D;
  opacity: 0.4;
  z-index: 2;
}

.content {
  position: relative;
  z-index: 3;
}

.title {
  position: absolute;
  top: 98px;
  left: 32px;
  font-size: 28px;
  font-family: 'AlibabaPuHuiTi';
  font-weight: bold;
  color: #fff;
}

.subtitle {
  position: absolute;
  top: 145px;
  left: 32px;
  font-size: 14px;
  color: #fff;
}

/* 修改抽屉样式 */
:host {
  --drawer-background: rgba(49, 59, 131, 0.22);
  --drawer-backdrop-filter: blur(50px);
}

.drawer-content {
  backdrop-filter: blur(50px);
  -webkit-backdrop-filter: blur(50px);
}

.tabbar {
  position: fixed;
  bottom: 16px;
  left: 50%;
  transform: translateX(-50%);
  width: 343px;
  height: 52px;
  background: #11153C;
  border-radius: 40px;
  z-index: 5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-item.left {
  margin-left: 50px;
}

.tab-item.right {
  margin-right: 50px;
}

.tab-item .icon {
  width: 22px;
  height: 22px;
  margin-bottom: 3px;
}

.tab-item .text {
  font-size: 11px;
  color: #fff;
}

.tab-item.center {
  position: relative;
}

 .press-icon {
  width: 64px;
  height: 64px;
  position: absolute;
  bottom: 7px;
  left: 50%;
  transform: translateX(-50%);
}
