.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.breath-image {
  width: 508rpx;
  height: 508rpx;
  margin-top: 372rpx;
}

.play-position {
  position: absolute;
  bottom: 326rpx;
}

.timer {
  position: absolute;
  bottom: 154rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.progress-container {
  position: absolute;
  bottom: 116rpx;
  width: 614rpx;
}

.progress-bg {
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: rgba(255, 255, 255, 0.1);
  overflow: hidden;
}

.progress-active {
  height: 100%;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 4rpx;
  transition: width 0.3s linear;
} 

/* 倒计时选择器样式 */
.breath-sheet {
  width: 100vw;
  height: 930rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
}

.breath-scrollable-time {
  height: 100%;
  overflow: hidden;
  /* border-top: 2px solid rgba(255, 255, 255, 0.1); */
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  background: rgba(120, 233, 184, 0.38);
  backdrop-filter: blur(100rpx);
  -webkit-backdrop-filter: blur(100rpx);
}

.bar {
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 32rpx;
  background: transparent;
}

.indicator {
  background-color: rgb(190, 186, 186);
  border-radius: 6rpx;
  height: 8rpx;
  width: 80rpx;
}

/* 选择器主体 */
.picker-body {
  position: relative;
  height: 500rpx;
  padding-bottom: 40rpx;
}

.picker-view {
  width: 100%;
  height: 100%;
}

.picker-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 52rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 添加固定的"分钟"标签样式 */
.unit-label {
  position: absolute;
  top: 47%;
  left: 57%;
  transform: translateY(-50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  z-index: 2;
  pointer-events: none;
}

/* 快捷设置部分 */
.quick-settings {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
}

.quick-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  width: 100%;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-top: 48rpx;
  width: 100%;
}

.quick-option {
  width: 170rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.save-button {
  width: 512rpx;
  height: 104rpx;
  border-radius: 52rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  margin-top: 64rpx;
  margin-bottom: 84rpx;
} 