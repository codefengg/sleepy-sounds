.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /* filter: blur(30px); */
}

.breath-list {
  padding: 32rpx;
}

.breath-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.item-image {
  width: 114rpx;
  height: 114rpx;
  border-radius: 16rpx;
  margin-right: 26rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 36rpx;
  color: #ffffff;
  line-height: 52rpx;
  margin-bottom: 10rpx;
}

.item-content {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 52rpx;
} 