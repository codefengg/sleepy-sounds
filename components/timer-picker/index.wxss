.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  opacity: 0;
  transition: opacity 0.3s ease;
  visibility: hidden;
}

.mask-show {
  opacity: 1;
  visibility: visible;
}

.picker-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(49, 59, 131, 0.24);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  z-index: 9999;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.panel-show {
  transform: translateY(0);
}

.panel-dragging {
  transition: none;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.title {
  font-size: 16px;
  color: #fff;
  font-weight: 500;
}

.cancel, .confirm {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  padding: 4px 8px;
}

.confirm {
  color: #fff;
}

/* 顶部指示条 */
.bar {
  height: 40px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16px;
  background: transparent;
}

.indicator {
  background-color: rgb(190, 186, 186);
  border-radius: 3px;
  height: 4px;
  width: 40px;
}

/* 选择器主体 */
.picker-body {
  position: relative;
  height: 250px;
  padding-bottom: 20px;
}

.picker-view {
  width: 100%;
  height: 100%;
}

.picker-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26px;
  color: rgba(255, 255, 255, 0.8);
}

/* 自定义选中项样式 */
.unit {
  margin-left: 4px;
}

/* 添加固定的"分钟"标签样式 */
.unit-label {
  position: absolute;
  top: 47%;
  left: 57%;
  transform: translateY(-50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 16px;
  z-index: 2;
  pointer-events: none;
}

/* 快捷设置部分 */
.quick-settings {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px;
}

.quick-title {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  width: 100%;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-top: 24px;
  width: 100%;
}

.quick-option {
  width: 85px;
  height: 30px;
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.save-button {
  width: 256px;
  height: 52px;
  border-radius: 26px;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #fff;
  margin-top: 32px;
  margin-bottom: 42px;
}

.timer-sheet {
  width: 100vw;
  height: 100vh;
  position: absolute;
  bottom: 0;
  z-index: 9999;
}

.scrollable {
  height: 100%;
  overflow: hidden;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  background: rgba(49, 59, 131, 0.24);
  backdrop-filter: blur(30px);
  -webkit-backdrop-filter: blur(30px);
} 