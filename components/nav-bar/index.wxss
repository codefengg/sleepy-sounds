.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  height: 100%;
  display: flex;
  align-items: center;
  width: 174rpx;
  height: 64rpx;
  padding-left: 32rpx;
}

.back-icon {
  width: 18rpx;
  height: 34rpx;
}

.title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
}

.fallback-icon {
  font-size: 48rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
} 