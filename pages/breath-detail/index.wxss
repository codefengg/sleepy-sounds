.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.breath-image {
  width: 254px;
  height: 254px;
  margin-top: 186px;
}

.play-position {
  position: absolute;
  bottom: 163px;
}

.timer {
  position: absolute;
  bottom: 77px;
  font-size: 14px;
  color: #ffffff;
}

.progress-container {
  position: absolute;
  bottom: 58px;
  width: 307px;
}

.progress-bg {
  width: 100%;
  height: 4px;
  border-radius: 2px;
  background-color: rgba(255, 255, 255, 0.1);
  overflow: hidden;
}

.progress-active {
  height: 100%;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 2px;
  transition: width 0.3s linear;
} 

/* 倒计时选择器样式 */
.breath-sheet {
  width: 100vw;
  height: 508px;
  position: fixed;
  bottom: 0;
  z-index: 9999;
}

.breath-scrollable-time {
  height: 100%;
  overflow: hidden;
  /* border-top: 2px solid rgba(255, 255, 255, 0.1); */
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  background: rgba(120, 233, 184, 0.38);
  backdrop-filter: blur(50px);
  -webkit-backdrop-filter: blur(50px);
}

.bar {
  height: 40px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16px;
  background: transparent;
}

.indicator {
  background-color: rgb(190, 186, 186);
  border-radius: 3px;
  height: 4px;
  width: 40px;
}

/* 选择器主体 */
.picker-body {
  position: relative;
  height: 250px;
  padding-bottom: 20px;
}

.picker-view {
  width: 100%;
  height: 100%;
}

.picker-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26px;
  color: rgba(255, 255, 255, 0.8);
}

/* 添加固定的"分钟"标签样式 */
.unit-label {
  position: absolute;
  top: 47%;
  left: 57%;
  transform: translateY(-50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 16px;
  z-index: 2;
  pointer-events: none;
}

/* 快捷设置部分 */
.quick-settings {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px;
}

.quick-title {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  width: 100%;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-top: 24px;
  width: 100%;
}

.quick-option {
  width: 85px;
  height: 30px;
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.save-button {
  width: 256px;
  height: 52px;
  border-radius: 26px;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #fff;
  margin-top: 32px;
  margin-bottom: 42px;
} 