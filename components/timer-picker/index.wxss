.picker-content {
  /* padding: 20px; */
}

.picker-body {
  position: relative;
  height: 400rpx;
  margin-bottom: 60rpx;
}

.unit-label {
  position: absolute;
  right: 30%;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  font-size: 32rpx;
  z-index: 10;
}

.picker-view {
  width: 100%;
  height: 400rpx;
}

.picker-item {
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
}

.quick-settings {
  margin-top: 40rpx;
}

.quick-title {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
}

.quick-options {
  display: flex;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.quick-option {
  width: 30%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.save-button {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
} 