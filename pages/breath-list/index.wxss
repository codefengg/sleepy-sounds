.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /* filter: blur(30px); */
}

.breath-list {
  padding: 16px;
}

.breath-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
}

.item-image {
  width: 57px;
  height: 57px;
  border-radius: 8px;
  margin-right: 13px;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 18px;
  color: #ffffff;
  line-height: 26px;
  margin-bottom: 5px;
}

.item-content {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 26px;
} 